    <script>
        // Dismiss loader after aperture animation
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.getElementById('loader').classList.add('hidden');
            }, 1800);
        });

        // Nav scroll state
        const nav = document.getElementById('nav');
        const onScroll = () => {
            if (window.scrollY > 50) {
                nav.classList.remove('over-video');
                nav.classList.add('scrolled');
            } else {
                nav.classList.add('over-video');
                nav.classList.remove('scrolled');
            }
        };
        window.addEventListener('scroll', onScroll);

        // Hamburger
        const btn = document.getElementById('hamburger');
        const menu = document.getElementById('mobile-menu');
        btn.addEventListener('click', () => { btn.classList.toggle('open'); menu.classList.toggle('open'); });
        menu.querySelectorAll('a').forEach(a => a.addEventListener('click', () => { btn.classList.remove('open'); menu.classList.remove('open'); }));

        // Logo blades hover: rotate slowly on hover
        const logoBrand = document.querySelector('.nav-brand');
        const logoBlades = document.querySelectorAll('.logo-blade');
        let bladeAngle = 0, rafId;
        logoBrand.addEventListener('mouseenter', () => {
            const spin = () => {
                bladeAngle += 0.8;
                logoBlades.forEach((b, i) => {
                    b.style.transform = `rotate(${i * 60 + bladeAngle}deg)`;
                });
                rafId = requestAnimationFrame(spin);
            };
            spin();
        });
        logoBrand.addEventListener('mouseleave', () => {
            cancelAnimationFrame(rafId);
            logoBlades.forEach((b, i) => {
                b.style.transform = `rotate(${i * 60}deg)`;
                b.style.transition = 'transform 0.5s ease';
            });
        });

        // Stat card entrance
        const cards = document.querySelectorAll('.stat-card');
        const obs = new IntersectionObserver(entries => {
            entries.forEach((e, i) => {
                if (e.isIntersecting) {
                    setTimeout(() => { e.target.style.opacity='1'; e.target.style.transform='translateY(0)'; }, i * 80);
                    obs.unobserve(e.target);
                }
            });
        }, { threshold: 0.1 });
        cards.forEach(c => {
            c.style.opacity = '0'; c.style.transform = 'translateY(16px)';
            c.style.transition = 'opacity 0.6s ease, transform 0.6s ease, background 0.3s';
            obs.observe(c);
        });
    </script>
</body>
</html>